<h2>{{title}}</h2>

{{#if message}}
  <div class="alert alert-success" role="alert">
    {{message}}
  </div>
{{/if}}

{{#if error}}
  <div class="alert alert-danger" role="alert">
    {{error}}
  </div>
{{/if}}

{{#if token}}
<form method="POST" action="/auth/reset-password">
  <input type="hidden" name="token" value="{{token}}">
  
  <div class="mb-3">
    <label for="password" class="form-label">New Password</label>
    <input type="password" class="form-control" id="password" name="password" required minlength="8">
    <div class="form-text">Must be at least 8 characters long, include uppercase, lowercase, and a number or special character.</div>
  </div>

  <div class="mb-3">
    <label for="confirmPassword" class="form-label">Confirm New Password</label>
    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
  </div>

  <button type="submit" class="btn btn-primary">Reset Password</button>
</form>
{{else}}
  <p>If you have a valid reset token, please access this page using the link provided in your email.</p>
  <p>Need a new link? <a href="/auth/forgot-password">Request a password reset</a>.</p>
{{/if}}
