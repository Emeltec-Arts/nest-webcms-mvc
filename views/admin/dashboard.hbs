<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Dashboard</h1>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card stats-card bg-primary text-white">
            <div class="card-body">
                <div class="stats-icon">
                    <i class="bi bi-file-text"></i>
                </div>
                <h5 class="card-title">Total Posts</h5>
                <h2 class="mb-0">{{totalPosts}}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stats-card bg-success text-white">
            <div class="card-body">
                <div class="stats-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h5 class="card-title">Published Posts</h5>
                <h2 class="mb-0">{{publishedPosts}}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stats-card bg-info text-white">
            <div class="card-body">
                <div class="stats-icon">
                    <i class="bi bi-pencil-square"></i>
                </div>
                <h5 class="card-title">Draft Posts</h5>
                <h2 class="mb-0">{{subtract totalPosts publishedPosts}}</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Recent Posts</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each recentPosts}}
                            <tr>
                                <td>{{this.title}}</td>
                                <td>
                                    <span class="badge {{#if (eq this.status 'published')}}bg-success{{else}}bg-warning{{/if}}">
                                        {{this.status}}
                                    </span>
                                </td>
                                <td>{{formatDate this.createdAt}}</td>
                                <td>
                                    <a href="/posts/{{this.id}}/edit" class="btn btn-sm btn-primary">Edit</a>
                                    <a href="/posts/{{this.slug}}" class="btn btn-sm btn-info" target="_blank">View</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
