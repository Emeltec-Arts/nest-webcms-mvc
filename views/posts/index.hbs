<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Blog Posts</h1>
                {{#if user}}
                <a href="/posts/create" class="btn btn-primary">Create New Post</a>
                {{/if}}
            </div>

            {{#each posts}}
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">{{this.title}}</h2>
                    <p class="text-muted">
                        By {{this.author.username}} | {{formatDate this.createdAt}}
                    </p>
                    <p class="card-text">{{truncate this.content 200}}</p>
                    <a href="/posts/{{this.slug}}" class="btn btn-primary">Read More</a>
                </div>
            </div>
            {{/each}}

            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {{#if hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/posts?page={{subtract currentPage 1}}">Previous</a>
                    </li>
                    {{/if}}

                    {{#if hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="/posts?page={{add currentPage 1}}">Next</a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </div>
</div>